.section.section-breadcrumbs
  .container
    .row
      .col-md-12
        h1 Your profile
.container
  .well
    form(name="profileForm")
      fieldset
        legend User profile
        .col-md-6
          .form-group
            input.form-control(name="username", type="text", placeholder="Username", ng-model="username", required)
          .form-group
            input.form-control(name="password", type="password", placeholder="Password", ng-model="password")
          .form-group
            input.form-control(name="email", type="email", placeholder="Email", ng-model="email", required)
          .form-group
            input.form-control(name="fname", type="text", placeholder="First Name", ng-model="fname", required)
          .form-group  
            input.form-control(name="lname", type="text", placeholder="Last Name" ng-model="lname", required)
          .form-group
            button.btn.btn-primary.btn-orange(ng-click="update()", ng-disabled="signupForm.$invalid") Submit
            | &nbsp;
            a.btn(href="/") Cancel